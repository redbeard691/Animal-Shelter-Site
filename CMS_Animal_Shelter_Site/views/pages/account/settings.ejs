<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CritterCrew - Settings</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <link rel="stylesheet" href="/stylesheets/account/settings.css">
</head>

<body>
    <!--Including navigation bar-->
    <%- include(includePath + '/template/header' ) %>

        <div class="container mt-5">
            <h1 class="text-center">Account Settings</h1>
            <p class="form-text text-center">
                Enter the new information you would like to change then click Save Changes when done.
            </p>

            <% if (locals.msg) { %>
                <div class="alert alert-danger" role="alert">
                    <%= msg %>
                </div>
            <% } %>

            <form action="/user/settings" method="post" enctype="multipart/form-data">

                <div class="row">
                    <div class="col">
                        <div class="row gy-2 px-2 pb-3">
                            <label for="profile-pic">New Profile Picture</label>
                            <input type="file" class="form-control" id="profile-pic" name="avatar">
                            <div class="text-center">
                                Current profile picture:<br>
                                <img src="/images/<%- locals.currentuser.profilePic %>" class="img-fluid img-thumbnail" alt="" id="image-preview">
                            </div>

                        </div>
                    </div>

                    <div class="col">
                        <div class="mb-3">
                            <label for="input-email-new" class="form-label">New Email</label>
                            <input type="email" class="form-control" id="input-email-new" name="new_email">
                        </div>

                        <div class="mb-3">
                            <label for="input-password-new" class="form-label">New Password</label>
                            <input type="password" class="form-control" id="input-password-new" name="new_password">
                        </div>

                        <div class="mb-3">
                            <label for="input-password-new-confirm" class="form-label">Re-enter New Password</label>
                            <input type="password" class="form-control" id="input-password-new-confirm" name="new_password_confirm">
                        </div>
                    </div>
                </div>

                <% if(locals.currentuser.isshelter) {%>
                    <h2 class="text-center">Shelter Info</h2>
                    <div class="row">
                        <div class="col">
                            <div class="mb-3">
                                <label for="input-address-new" class="form-label">New Address</label>
                                <input type="text" class="form-control" id="input-address-new" name="new_address">
                            </div>
    
                            <div class="mb-3">
                                <label for="input-animals-new" class="form-label">New Animals Cared For</label>
                                <input type="text" class="form-control" id="input-animals-new" name="new_animals">
                            </div>
    
                            <div class="mb-3">
                                <label for="input-about-new" class="form-label">New Shelter Description</label>
                                <textarea type="text" class="form-control" id="input-about-new" name="new_about"></textarea>
                            </div>

                            <div class="mb-3">
                                <label for="input-website-new" class="form-label">New Website</label>
                                <input type="text" class="form-control" id="input-website-new" name="new_website">
                            </div>
                        </div>
                    </div>
                <% } %>

                <div class="btn-toolbar justify-content-center m-1">
                    <button type="reset" class="btn btn-secondary me-2">Reset</button>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
</body>

</html>