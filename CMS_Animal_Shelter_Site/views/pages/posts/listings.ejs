<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CritterCrew - Pet Listings</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheet/posts/listings.css">

    <!-- Bootstrap Tag Input -->
    <link href="https://cdn.jsdelivr.net/gh/More-Than-Solitaire/bootstrap-tag-input@main/tags.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/gh/More-Than-Solitaire/bootstrap-tag-input@main/tags.js"></script>

    <!-- initialize page (only needs to be called once, even for multiple inputs) -->
    <script>
    window.onload = function(event) {
        initTags();
    }
    </script>
</head>
<body>
    <!--Including navigation bar-->
    <%- include(includePath + '/template/header') %>
    <div class="container-md mt-5" id="contents">
        <h1 class="text-center">Pet Listings</h1>
        <div class="row h-100">
            <!--Filters-->
            <div class="col-4 border border-secondary me-1 rounded bg-secondary-subtle" id="filter-col">
                <h5 class="text-center mt-2">Filters</h5>
                <form class="row gy-2">
                    <!--Status-->
                    <div class="input-group">
                        <label class="input-group-text" for="pet-status">Status:</label>
                        <select name="Status" id="pet-status" class="form-select">
                            <option selected value="Any">Any</option>
                            <option value="Lost">Lost</option>
                            <option value="Found">Found</option>
                            <option value="Returned">Returned</option>
                        </select>
                    </div>

                    <!--Type-->
                    <div class="input-group">
                        <label class="input-group-text" for="pet-type">Type:</label>
                        <select name="Status" id="pet-type" class="form-select">
                            <option selected value="Any">Any</option>
                            <option value="Dog">Dog</option>
                            <option value="Cat">Cat</option>
                            <option value="Lizard">Lizard</option>
                            <option value="Bird">Bird</option>
                            <option value="Other">Other</option>
                        </select>
                    </div>

                    <!--Location-->
                    <div class="input-group">
                        <span class="input-group-text">City:</span>
                        <input type="text" class="form-control" id="pet-city" placeholder="Any">
                    </div>
    
                    <div class="input-group">
                        <span class="input-group-text">State:</span>
                        <input type="text" class="form-control" id="pet-state" placeholder="Any">
                    </div>

                    <!--Tags-->
                    <div class="input-group">
                        <span class="input-group-text">Tags:</span>
                        <div class="tags-input form-control" id="pet-tags"></div>
                    </div>
                    <div class="form-text" id="tag-help">
                        Press enter after each tag to add it to the list.
                    </div>

                    <!--Buttons-->
                    <div class="btn-toolbar justify-content-between">
                        <button type="reset" class="btn btn-secondary">Clear</button>
                        <button type="submit" class="btn btn-primary">Search</button>
                    </div>
                </form>
            </div>

            <!--Results-->
            <div class="col border border-secondar rounded p-0">
                <iframe src="demo_listings" frameborder="0" class="h-100 w-100 rounded"></iframe>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>