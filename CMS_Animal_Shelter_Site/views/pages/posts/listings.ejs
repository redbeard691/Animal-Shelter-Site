<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CritterCrew - Pet Listings</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/posts/listings.css">

    <!-- Bootstrap Tag Input -->
    <link href="https://cdn.jsdelivr.net/gh/More-Than-Solitaire/bootstrap-tag-input@main/tags.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/gh/More-Than-Solitaire/bootstrap-tag-input@main/tags.js"></script>

    <script src="/javascripts/listings.js" defer></script>

    <!-- initialize page (only needs to be called once, even for multiple inputs) -->
    <script>
    window.onload = function(event) {
        initTags();
        getResults();
    }
    </script>
</head>
<body>
    <!--Including navigation bar-->
    <%- include(includePath + '/template/header') %>

    <div class="container-md mt-5" id="contents">
        <h1 class="text-center">Pet Listings</h1>
        <div class="d-grid mb-2 justify-content-center">
            <a href="/posts/create"><button class="btn btn-primary">Report a Lost or Found Animal</button></a>
        </div>
        <div class="row h-100">
            <!--Filters-->
            <div class="col-4 border border-secondary me-1 rounded bg-secondary-subtle" id="filter-col">
                <h5 class="text-center mt-2">Filters</h5>
                <form class="row gy-2" id="filters">
                    <!--Status-->
                    <div class="input-group">
                        <label class="input-group-text" for="status">Status:</label>
                        <select id="status" class="form-select" name="status">
                            <option selected value="">Any</option>
                            <option value="Lost">Lost</option>
                            <option value="Found">Found</option>
                            <option value="Returned">Returned</option>
                        </select>
                    </div>

                    <!--Type-->
                    <div class="input-group">
                        <label class="input-group-text" for="type">Type:</label>
                        <select id="type" class="form-select" name="type">
                            <option selected value="">Any</option>
                            <option value="Dog">Dog</option>
                            <option value="Cat">Cat</option>
                            <option value="Lizard">Lizard</option>
                            <option value="Bird">Bird</option>
                            <option value="Other">Other</option>
                        </select>
                    </div>

                    <!--Location-->
                    <div class="input-group">
                        <span class="input-group-text">City:</span>
                        <input type="text" class="form-control" id="city" name="city" placeholder="Any">
                    </div>
    
                    <div class="input-group">
                        <span class="input-group-text">State:</span>
                        <input type="text" class="form-control" id="state" name="state" placeholder="Any">
                    </div>

                    <!--Tags-->
                    <div class="input-group">
                        <span class="input-group-text">Tags:</span>
                        <div class="tags-input form-control" id="tags" data-name="Tag"></div>
                    </div>
                    <div class="form-text" id="tag-help">
                        Press enter after each tag to add it to the list.
                    </div>

                    <!--Buttons-->
                    <div class="btn-toolbar justify-content-between">
                        <button type="reset" class="btn btn-secondary">Clear</button>
                        <button type="button" class="btn btn-primary" onclick="getResults()">Search</button>
                    </div>
                </form>
            </div>

            <!--Results-->
            <div class="col border border-secondary rounded p-0 overflow-auto" id="results-list">
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>