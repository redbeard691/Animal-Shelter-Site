<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CritterCrew - View post</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    
    <link rel="stylesheet" href="/stylesheets/posts/view.css">
    <script src="/javascripts/reportadmin.js"></script>
    <script src="/javascripts/removepost.js"></script>
   
</head>
<body>
    <!--Including navigation bar-->
    <%- include(includePath + '/template/header') %>

    <div class="container mt-5" id="content">
        <!--Pet Info-->
        <div class="row">
            <img src="/images/logo.jpg" class="col img-fluid img-thumbnail" alt="" id="animal-pic">
            <div class="col">
                <table class="table">
                    <tr>
                        <th>Status:</th>
                        <td id="pet-status"><%= locals.post.status %></td>
                    </tr>
                    <tr>
                        <th>Name:</th>
                        <td id="pet-name"><%= locals.post.name %></td>
                    </tr>
                    <tr>
                        <th>Type:</th>
                        <td id="pet-type"><%= locals.post.type %></td>
                    </tr>
                    <tr>
                        <th>Location:</th>
                        <td id="pet-location"><%= locals.post.city %>, <%= locals.post.state %></td>
                    </tr>
                    <tr>
                        <th>Last updated:</th>
                        <td id="pet-date"><%= locals.post.updatedAt %></td>
                    </tr>
                </table>
            </div>
        </div>

        <!--Pet Description-->
        <div class="row mt-3 justify-content-center">
            <div class="col-9 border rounded p-2">
                <h3 class="text-center">Description</h3>
                <p id="pet-description border border-primary">
                    <%= locals.post.description %>
                </p>
            </div>
        </div>

        <!--Tags-->
        <div class="row mt-3 justify-content-center">
            <div class="col-9 border rounded p-2">
                <h3 class="text-center">Tags</h3>
                <ul class="list-inline list-unstyled text-center" id="tag-list">
                    <% if (locals.tags) { %>
                        <% const tags = locals.tags %>
                        <% for (var i = 0; i < tags.length; i++) { %>
                            <li class="list-inline-item badge rounded-pill bg-secondary"><%= tags[i].name %></li>
                        <% } %>
                    <% } %>
                </ul>
            </div>
        </div>

        <!--Buttons-->
        <% if(locals.currentuser && locals.currentuser.username === locals.post.author) { %>
            <div class="row mt-3 justify-content-center">
                <div class="col-auto">
                    <a href=<%- `${locals.post.id}/edit` %>>
                        <button type="button" class="btn btn-secondary">Edit Post</button>
                    </a>
                </div>
            </div>
        <% } else { %>
            <div class="row mt-3 justify-content-between">
                <div class="col row" id="poster-info">
                    <div class="col row">
                        <div class="col-auto">
                            <a href=<%= `/user/${locals.post.author}` %>>
                                <img src="/images/Portrait_Placeholder.png" class="img-thumbnail rounded-circle" alt="" id="user-pic">
                            </a>
                        </div>
                        <div class="col-auto align-content-center">
                            <a href=<%= `/user/${locals.post.author}` %> class="text-decoration-none text-body">
                                <h6>Posted by</h6>
                                <p class="m-0"><%= locals.post.author %></p>
                            </a>
                        </div>
                        <div class="col align-content-center">
                            <a href=<%= `/messages/compose?recipient=${locals.post.author}`%>>
                                <button type="button" class="btn btn-primary">Send Message</button>
                            </a>
                        </div>
                    </div>
                    <div class="col-auto align-content-center p-0 me-2">
                        <% if(locals.currentuser && (locals.currentuser.isadmin || locals.currentuser.username === locals.post.author)) { %>
                            <button type="button" class="btn btn-outline-danger m-1" onclick="removePost('<%= locals.post.id %>')">Delete Post</button>
                        <% } %>
                    </div>
                    <div class="col-auto align-content-center p-0 me-2">
                            <button type="button" class="btn btn-outline-danger" onclick="reportAccount('<%= locals.post.id %>', 'Post', 'Investigate user post for violations, ')">Report Post</button>
                    </div>
                </div>
            </div>
        <% } %>



    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>