<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/index.css">
</head>

<body>
    <!--Including navigation bar-->
    <%- include(includePath + '/template/header') %>

    <div class="text-center align-content-center" id="hero">
        <h1 class="fw-bold">Critter Finder</h1>
        <h4 class="fw-bold">Bringing Pets Home</h4>
        <div class="col-lg-6 mx-auto">
            <div class="btn-toolbar justify-content-center">
                <a href="/posts/create" class="btn btn-primary btn-lg me-2" role="button">Report a Lost or Found Pet</a>
            </div>
        </div>
    </div>

    <div class="container">
        <h1 class="mt-5 text-center">Recent Lost Pets</h1>
        <div class="row p-0 g-0">
            <ul class="list-group list-group-horizontal-md list-group-flush rounded border justify-content-center bg-secondary-subtle">
                <% if (locals.lostPosts) { %>
                    <% const lost = locals.lostPosts %>
                    <% for (let i = 0; i < Math.min(lost.length, 3); i++) { %>
                        <div class="list-group-item card m-3" style="width: 18rem;">
                            <img src="/images/<%- lost[i].picture %>" class="card-img-top">
                            <div class="card-body">
                                <h5 class="card-title"><%= lost[i].name %></h5>
                                <p class="card-text"><b>Type:</b> <%= lost[i].type %><br><b>Location:</b> <%= lost[i].city %>, <%= lost[i].state %></p>
                                <a href="/posts/view/<%- lost[i].id %>" class="btn btn-primary">View Post</a>
                            </div>
                          </div>
                    <% } %>
                <% } else { %>
                    <h2>Lost animal posts will appear here.</h2>
                <% } %>
            </ul>
            <a href="/posts" class="btn btn-primary btn-lg mt-2" role="button">View All Pets</a>
        </div>

        <h1 class="mt-5 text-center">Recent Found Pets</h1>
        <div class="row p-0 g-0">
            <ul class="list-group list-group-horizontal-md list-group-flush rounded border justify-content-center bg-secondary-subtle">
                <% if (locals.foundPosts) { %>
                    <% const found = locals.foundPosts %>
                    <% for (let i = 0; i < Math.min(found.length, 3); i++) { %>
                        <div class="list-group-item card m-3" style="width: 18rem;">
                            <img src="/images/<%- found[i].picture %>" class="card-img-top">
                            <div class="card-body">
                                <% if (found[i].name) { %>
                                    <h5 class="card-title"><%= found[i].name %></h5>
                                <% } else { %>
                                    <h5 class="card-title">Unknown</h5>
                                <% } %>
                                <p class="card-text"><b>Type:</b> <%= found[i].type %><br><b>Location:</b> <%= found[i].city %>, <%= found[i].state %></p>
                                <a href="/posts/view/<%- found[i].id %>" class="btn btn-primary">View Post</a>
                            </div>
                          </div>
                    <% } %>
                <% } else { %>
                    <h2>Found animal posts will appear here.</h2>
                <% } %>
            </ul>
            <a href="/posts" class="btn btn-primary btn-lg mt-2" role="button">View All Pets</a>
        </div>

        <h1 class="mt-5 text-center">Recent Articles</h1>
        <div class="row p-0 g-0 mb-5">
            <ul class="list-group list-group-horizontal-md list-group-flush rounded border">
                <a href="pages/info/bulletins" class="list-group-item list-group-item-action bg-secondary-subtle p-3">
                    <img src="images/logo.jpg" class="list-img mx-auto d-block">
                    <h3>Article Title</h3>
                    <p>
                        Article Summary
                    </p>
                </a>

                <a href="pages/info/bulletins" class="list-group-item list-group-item-action bg-secondary-subtle p-3">
                    <img src="images/logo.jpg" class="list-img mx-auto d-block">
                    <h3>Article Title</h3>
                    <p>
                        Article Summary
                    </p>
                </a>

                <a href="pages/info/bulletins" class="list-group-item list-group-item-action bg-secondary-subtle p-3">
                    <img src="images/logo.jpg" class="list-img mx-auto d-block">
                    <h3>Article Title</h3>
                    <p>
                        Article Summary
                    </p>
                </a>
            </ul>
            <a href="/pages/info/blog" class="btn btn-primary btn-lg mt-2" role="button">View Site Blog</a>
        </div>

    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>